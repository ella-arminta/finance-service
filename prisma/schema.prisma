  store_id String @db.Uuid
  created_at DateTime @default(now())
  record_type String  // Nota beli / Nota bayar beli
  trans_code String
  trans_date DateTime
  due_date DateTime
  amount Decimal
  payment_id String? @db.Uuid
  payment_code String?
  payment_date DateTime?
